{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"],
      "@huoshan-ui/vue": ["packages/vue/src"],
      "@huoshan-ui/vue/*": ["packages/vue/src/*"],
      "@huoshan-ui/core": ["packages/core/src"],
      "@huoshan-ui/core/*": ["packages/core/src/*"]
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue"]
}